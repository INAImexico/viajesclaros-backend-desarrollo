<script type='text/javascript'>
	window.viajes = <%- JSON.stringify(viajes) %>;
	window.content = <%- JSON.stringify(_content) %>;
</script>
<div ng-controller='viajeCTL' >
	<p><button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Nuevo viaje</button></p>
	<br/>	
	<div directory-listing 
		objects='viajes' 
		keywords='searchInput' 
		dir='viajes' 
		edit-url='/viaje/edit/' 
		get-info='getInfo'
		name-var='ciudad_destino'
	>
	</div>
	<div class="clearfix"></div>
	<div class="modal fade" id="myModal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div 
					form-helper 
			        fields='content.viaje' 
			        form-footer='Agregar'
			        form-save = 'createviaje'
			        object = 'viaje'
			        form-title='Agregar viaje'
			       	modal='true'
			        >
			    </div>	
			</div>
		</div>
	</div>
</div>
